# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info
SOCKET_WORKERS=0 # 0 means use all available CPU cores

# Database & Cache
DATABASE_URL="postgres://user:password@localhost:5432/postgres"
REDIS_URL="redis://localhost:6379/0"

# Security & Authentication
# Primary key for client authentication
SOCKETIO_AUTH_KEY="your-socketio-auth-key"
# Legacy/Secondary key for wider compatibility
MOBILE_API_ACCESS_KEY="your-mobile-api-access-key"
# Token for administrative Socket.IO actions
ADMIN_TOKEN="your-admin-token"

# Backend Relay (Notifier)
# Used to send events back to the main backend
NOTIFY_URL="http://localhost:3000/api/v1/external/events"
NOTIFY_API_KEY="your-notify-api-key"

# Elasticsearch Monitoring
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_NODE="http://localhost:9200"
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=password
ELASTICSEARCH_INDEX_PREFIX=srm-socketio

# Datadog (Optional)
DD_AGENT_HOST="localhost"
DD_ENV="development"
DD_SERVICE="socketio-provider-server"
DD_VERSION="1.0.0"
